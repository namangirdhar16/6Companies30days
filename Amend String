string amendSentence (string s)
    {
        // your code here
        string ans = "";
        for(int i = 0; i < s.size(); i++) {
            if(s[i] >= 'A' && s[i] <= 'Z') {
                s[i] -= 'A';
                s[i] += 'a';
                if(i != 0) ans += " ";
                
            }
            ans += s[i];
        }
        return ans;
    }
